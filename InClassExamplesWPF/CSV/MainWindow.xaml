<Window x:Class="CSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TxtBxFilePath" HorizontalAlignment="Left" Height="22" Margin="120,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="424"/>
        <Label x:Name="LblFilePath" Content="Path:" HorizontalAlignment="Left" Margin="35,74,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="LstBxLines" Height="267" Margin="10,142,10,0" VerticalAlignment="Top" Grid.RowSpan="2" SelectionChanged="LstBxLines_SelectionChanged"/>
        <Button x:Name="BttnSelectFile" Content="Select" HorizontalAlignment="Left" Height="30" Margin="580,10,0,0" VerticalAlignment="Top" Width="108" Click="BttnSelectFile_Click"/>
        <Button x:Name="BttnProcess" Content="Process" HorizontalAlignment="Left" Height="45" Margin="579,74,0,0" VerticalAlignment="Top" Width="109" Click="BttnProcess_Click"/>

    </Grid>
</Window>
