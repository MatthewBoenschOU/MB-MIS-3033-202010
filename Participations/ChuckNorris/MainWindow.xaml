<Window x:Class="ChuckNorris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChuckNorris"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.fineartamerica.com/images/artworkimages/mediumlarge/2/chuck-norris-nikita-abakumov.jpg"/>
        </Grid.Background>
        <ComboBox x:Name="CBJokeCategories" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="236" Height="24"/>
        <Button x:Name="BttnGetJoke" Content="Get Joke" HorizontalAlignment="Left" Margin="62,72,0,0" VerticalAlignment="Top" Width="110" Height="30" Click="BttnGetJoke_Click"/>
        <TextBox x:Name="TxtBxJoke" HorizontalAlignment="Left" Height="75" Margin="536,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246"/>

    </Grid>
</Window>
